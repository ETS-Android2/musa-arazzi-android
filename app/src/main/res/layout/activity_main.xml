<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.musaarazzi.ArRecognitionActivity">


    <fragment
        android:id="@+id/ux_fragment"
        android:name="com.musaarazzi.augmentedimage.ArRecognitionFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="50dp"
        android:layout_marginBottom="150dp" />

    <ProgressBar
        android:id="@+id/progressBar"
        android:layout_width="89dp"
        android:layout_height="150dp"
        android:layout_gravity="center"
        android:layout_marginBottom="45dp"
        android:theme="@style/ProgressBarStyle"
        android:visibility="visible" />

    <ImageButton
        android:id="@+id/virtualModeButton"
        android:layout_width="57dp"
        android:layout_height="51dp"
        android:layout_gravity="right"
        android:background="#00FFFFFF"
        android:onClick="onClick"
        app:srcCompat="@drawable/ic_round_image_search" />

    <ImageButton
        android:id="@+id/backButton"
        android:layout_width="57dp"
        android:layout_height="51dp"
        android:background="#00FFFFFF"
        android:onClick="onClick"
        app:srcCompat="@drawable/ic_round_arrow_back_ios" />

    <ImageButton
        android:id="@+id/subtitlesButton"
        android:layout_width="57dp"
        android:layout_height="51dp"
        android:layout_gravity="bottom|end"
        android:layout_marginBottom="100dp"
        android:background="#00FFFFFF"
        android:onClick="onClick"
        app:srcCompat="@drawable/ic_round_speaker_notes" />

    <ImageButton
        android:id="@+id/backwardButton"
        android:layout_width="57dp"
        android:layout_height="51dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="70dp"
        android:layout_marginBottom="50dp"
        android:background="#00FFFFFF"
        android:onClick="onClick"
        app:srcCompat="@drawable/ic_round_skip_previous" />

    <ImageButton
        android:id="@+id/playButton"
        android:layout_width="57dp"
        android:layout_height="51dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="180dp"
        android:layout_marginBottom="50dp"
        android:background="#00FFFFFF"
        android:onClick="onClick"
        app:srcCompat="@drawable/ic_round_play_arrow" />

    <ImageButton
        android:id="@+id/pauseButton"
        android:layout_width="57dp"
        android:layout_height="51dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="180dp"
        android:layout_marginBottom="50dp"
        android:background="#00FFFFFF"
        android:onClick="onClick"
        android:visibility="gone"
        app:srcCompat="@drawable/ic_round_pause" />

    <ImageButton
        android:id="@+id/forwardButton"
        android:layout_width="57dp"
        android:layout_height="51dp"
        android:layout_gravity="bottom"
        android:layout_marginLeft="290dp"
        android:layout_marginBottom="50dp"
        android:background="#00FFFFFF"
        android:onClick="onClick"
        app:srcCompat="@drawable/ic_round_skip_next" />

    <TextView
        android:id="@+id/chapterNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:layout_marginStart="5dp"
        android:layout_marginBottom="120dp"
        android:background="#00FFFFFF"
        android:textColor="#000000"
        android:textSize="18sp" />

    <TextView
        android:id="@+id/artworkNameTextView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginEnd="5dp"
        android:layout_marginBottom="30dp"
        android:background="#00FFFFFF"
        android:textColor="#000000"
        android:textSize="18sp" />


</FrameLayout>
